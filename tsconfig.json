{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*"]
}
